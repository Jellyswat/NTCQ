
@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.css">
    <title>权限管理</title>
    <style>
        .loading {
            width: 160px;
            height: 56px;
            position: absolute;
            margin: auto;
            top: 30%;
            left: 35%;
            line-height: 56px;
            color: #fff;
            padding-left: 60px;
            font-size: 15px;
            background: #000 url(/images/loader.gif) no-repeat 10px 50%;
            opacity: 0.7;
            z-index: 9999;
            -moz-border-radius: 20px;
            -webkit-border-radius: 20px;
            border-radius: 20px;
            filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
        }
    </style>
</head>
<body>
    <div style="margin-left:5px;margin-right:5px">
        <div id="toolbar" class="btn-group">
            <button id="btn_Add" type="button" class="btn btn-default">
                <span class="glyphicon" aria-hidden="true" id="signText">添加管理员</span>
            </button>
            <button id="btn_Del" type="button" class="btn btn-default">
                <span class="glyphicon" aria-hidden="true" id="signText">删除管理员</span>
            </button>
        </div>
        <div>
            <table id="table" class="table"></table>
        </div>
        <div class="load" style="display:none" id="loaddiv">
            <div id="loading" class="loading">Loading...</div>
        </div>
    </div>

    <div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">添加管理员</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <p>请填写用户名：</p><input id="InsertUserName" type="text" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="doSubmitAdd">保存</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/locale/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/Scripts/NTCQ/Power.js"></script>
</body>
